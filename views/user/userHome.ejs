<style>
	.image-container {
    position: relative;
    width: 100%;
    height: auto; 
	
}
.overlay {
    position: absolute;
    top: 50%; /* Position overlay in the middle vertically */
    left: 20%; /* Position overlay in the middle horizontally */
    transform: translate(-50%, -50%); /* Center the overlay */
    text-align: center; /* Align text and button in the center */
    padding: 20px;
}
.overlay h2 {
    font-size: 120px;
    color: #ffffff;
}
.img{
		filter: blur(2px);
		filter: brightness(0.6);
		filter: grayscale(2%);
	}
@media (max-width: 768px) {
        .overlay {
            width: 100%; /* Adjust width for smaller screens */
			left: 50%;
			text-align: left;
        }

        .overlay h2 {
            font-size: 70px; /* Further reduce font size for smaller screens */
        }

        .overlay p {
            font-size: 15px; /* Further reduce font size for paragraphs */
        }
    }
	
	.img{
		filter: blur(2px);
		filter: brightness(0.6);
		filter: grayscale(2%);
	}
	@media (max-width: 375px) {
		.overlay {
            width: 100%;
			height: 100px; /* Adjust width for smaller screens */
			left: 50%;
			top: 30%;
			text-align: left;
        }

        .overlay h2 {
            font-size: 40px; /* Further reduce font size for smaller screens */
			
        }

        .overlay p {
            font-size: 10px; /* Further reduce font size for paragraphs */
        }
		.img{
		filter: blur(2px);
		filter: brightness(0.6);
		filter: grayscale(2%);
		height: 250px;
	}

	}

</style>
