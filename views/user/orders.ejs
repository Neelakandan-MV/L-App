        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Order List </h2>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <% if (!orders.length==0) { %>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#ID</th>
                                    <!-- <th scope="col">Name</th> -->
                                    <th scope="col">Total</th>
                                    <th scope="col">Order Status</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Payment Status</th>
                                    <th scope="col">Action</th>
                                    <th scope="col" class="text-end"> Details </th>
                                </tr>
                            </thead>
                            <tbody>
                                    <% orders.forEach((item,index)=> { %>
                                        <tr>
                                            <td>#p<%= item._id %></td>
                                            <!-- <td><b>
                                                    <%= user.username %>
                                                </b></td> -->
                                            <td>
                                                <% if(item.couponDiscount !==0 ){ %>
                                                <p id="totalAmount<%= index %>"><%= item.totalAmount+50 %></p>
                                                <% }else{ %>
                                                    <p id="totalAmount<%= index %>"><%= item.totalAmount %></p>
                                                    <% } %>
                                            </td>
                                            
                                            <td class="text-dark">
                                                <% if(item.orderStatus == 'Delivered'){ %>
                                                <span class="badge rounded-pill alert-success text-black"><%= item.orderStatus%></span>
                                                <% }else{ %>
                                                    <span class="badge rounded-pill alert-danger text-black"><%= item.orderStatus%></span>
                                                    <% } %>
                                            </td>
                                            <td>
                                                <%= item.date.toLocaleDateString() %>
                                            </td>
                                            <td>
                                                <% if(item.paymentStatus == 'paid'){ %>
                                                    <span class="badge rounded-pill alert-success text-black"><%= item.paymentStatus%></span>
                                                    <% }else{ %>
                                                        <span class="badge rounded-pill alert-danger text-black"><%= item.paymentStatus%></span>
                                                        <% } %>
                                            </td>
                                            <td>
                                                <% if(item.orderStatus !== 'Cancelled' && item.orderStatus !== 'Delivered' && item.paymentStatus !== 'refunded' && item.paymentStatus !== 'failed' &&item.orderStatus !=='waitingForAdminApproval' &&item.orderStatus !=='approvedForReturn'){ %>
                                                <a href="/orderCancel?orderId=<%= item._id %>"
                                                class="btn btn-md rounded font-sm " onclick="reload()">Cancel</a>
                                                <% }else if(item.orderStatus === 'Delivered' && item.paymentStatus == 'paid' && item.paymentStatus !== 'failed' && item.orderStatus !=='approvedForReturn'){ %>
                                                    <a href="/orderReturnRequest?orderId=<%= item._id %>"
                                                        class="btn btn-md rounded font-sm" onclick="reload()">Apply for Return</a>
                                                        <% }else if(item.paymentStatus == 'failed'){ %>
                                                            <button type="button" class="btn btn-md rounded font-sm" onclick="retryPayment('<%= index %>','<%= item._id %>')">Retry Payment</button>
                                                                <% }else if(item.orderStatus = 'approvedForReturn' && item.orderStatus !== 'Cancelled' && item.orderStatus !=='Delivered' && item.orderStatus !=='Shipped' && item.orderStatus !=='pending' && item.paymentStatus !=='pending' && item.paymentStatus!=='refunded' && item.orderStatus !=='waitingForAdminApproval'){ %>
                                                                    <a href="/orderReturn?orderId=<%= item._id %>"
                                                                        class="btn btn-md rounded font-sm" onclick="reload()">Return</a>
                                                                        <% } %>
                                            </td>
                                            <td class="text-end">
                                                    <a href="/orderDetails/<%= item._id %>"
                                                        class="btn btn-md rounded font-sm">Details</a>
                                            </td>
                                        </tr>
                                        <% }) %>

                            </tbody>
                        </table>
                        <% } else { %>
                            <h3 class="text-secondery text-center">0 orders</h3>
                            <% } %>
                    </div> <!-- table-responsive //end -->
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
            <div class="pagination-area mt-30 mb-50">
                <div class="d-flex justify-content-center">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-start">
                            <% for(let i=1; i <=totalPages; i++) { %>
                                <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                                    <a class="page-link" href="/orders?page=<%= i %>">
                                        <%= i %>
                                    </a>
                                </li>
                                <% } %>
                        </ul>
                    </nav>
                </div>
            </div>
        </section> <!-- content-main end// -->
