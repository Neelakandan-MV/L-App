<%- include('./partials/adminHeader') %>
    <div class="screen-overlay"></div>
    <%- include('./partials/aside.ejs')  %>
    <main class="main-wrap">
        
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Return Requests</h2>
                    <p>Orders requested for return are listed here</p>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th scope="col">Payment Method</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Date</th>
                                    <th scope="col" class="text-end"> Action </th>
                                    <th scope="col" class="text-end"> Details </th>
                                </tr>
                            </thead>
                            <tbody class="table-light">
                                <% for(let i=0; i<orders.length; i++){ %>
                                <tr>
                                    <td><b><%= orders[i].userId.username %></b></td>
                                    <td><% if(orders[i].paymentMethod == 'CashOnDelivery'){%><span class="material-symbols-outlined">
                                        shopping_bag
                                        </span><% }else{ %><img src="assets/imgs/card-brands/2.png" class="border" height="20"><% } %><%= orders[i].paymentMethod %></td>
                                    
                                    <td><%= orders[i].userId.email %></td>
                                    <td><%= orders[i].totalAmount %></td>
                                    <td><span class="badge rounded-pill alert-warning"><%= orders[i].orderStatus %></span></td>
                                    <td><%= orders[i].date.toLocaleDateString() %></td>
                                    <td><a href="/adminApprove?orderId=<%= orders[i]._id %>" class="btn btn-md rounded font-sm">Approve Request</a></td>
                                    <td class="text-end">
                                        <a href="/adminOrderDetails?orderId=<%= orders[i]._id %>" class="btn btn-md rounded font-sm">Detail</a>
                                    </td>
                                </tr>
                                <% } %> 
                            </tbody>
                        </table>
                        <%if(orders.length === 0){ %>
                            <h4 class="text-center">No Requests</h4>
                            <% } %>
                    </div> <!-- table-responsive //end -->
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
            <div class="pagination-area mt-15 mb-50">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                    </ul>
                </nav>
            </div>
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                    document.write(new Date().getFullYear())
                    </script> Â©, Evara - HTML Ecommerce Template .
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">
                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
    </main>
    <script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="assets/js/vendors/select2.min.js"></script>
    <script src="assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="assets/js/main.js" type="text/javascript"></script>
</body>

</html>